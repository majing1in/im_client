<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_shape_oval"
    android:orientation="vertical">

    <LinearLayout
        android:layout_margin="8dp"
        android:background="@drawable/shape_oval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_item_add"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:src="@drawable/preview" />

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_item_add_tip"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好友添加请求："
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_item_add_friend"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户账号"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/et_item_add"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingStart="10dp"
        android:background="@drawable/shape_oval"
        android:textSize="26sp"
        android:hint="同意请输入备注名~~~"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_item_add_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_style"
            android:text="确定"
            android:textSize="18sp" />

        <Button
            android:layout_marginLeft="5dp"
            android:id="@+id/bt_item_add_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="取消"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>
